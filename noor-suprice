<script>
// Floating emojis
const emojis=["â¤ï¸","ğŸŒ¹"];
let floatingInterval;
function createFloating(){
  const container=document.getElementById("floatingContainer");
  const span=document.createElement("span");
  span.className="floatingEmoji";
  span.innerText=emojis[Math.floor(Math.random()*2)];
  span.style.left = Math.random()*95+"%";
  span.style.animationDuration = (6 + Math.random()*6) + "s";
  container.appendChild(span);
  setTimeout(()=>span.remove(),8000);
}
floatingInterval=setInterval(createFloating,250);

function stopFloating(){ clearInterval(floatingInterval); document.getElementById("floatingContainer").innerHTML=""; }

function showConfetti(){
  for(let i=0;i<30;i++){
    const conf=document.createElement("div");
    conf.className="confetti-piece";
    conf.style.left=Math.random()*100+"%";
    conf.style.animationDuration=(2 + Math.random()*2) + "s";
    document.body.appendChild(conf);
    setTimeout(()=>conf.remove(),3000);
  }
}

function show(id){
  document.querySelectorAll(".page").forEach(p=>p.classList.remove("active"));
  document.getElementById(id).classList.add("active");
}

function moveNo(btn){
  btn.style.top = Math.random()*70+"%";
  btn.style.left = Math.random()*70+"%";
}
document.querySelectorAll(".no").forEach(btn=>{
  btn.addEventListener("mouseover",()=>moveNo(btn));
  btn.addEventListener("touchstart",()=>moveNo(btn));
});

function hugYes(){ show("hug"); }
function askKiss(){ show("kissAsk"); }
function kissAnimation(){ show("kissAnim"); }
function finalHeart(){ show("final"); stopFloating(); }
function showILoveYou(){ show("lovePage"); showConfetti(); }
function goSurprise(){ show("surprise"); }

function openGift(){
  document.getElementById("gift").style.display="none";
  document.getElementById("cartoon").style.display="block";
  typeText("I know you love me my wife ğŸ‘€ğŸ’ŒğŸŒš","finalText",0);
}

function typeText(txt,id,index){
  if(index < txt.length){
    document.getElementById(id).innerHTML += txt[index];
    setTimeout(()=>typeText(txt,id,index+1),80);
  }
}
</script>

